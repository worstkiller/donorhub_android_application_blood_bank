<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vikaskumar.materialdesign.activity.FriendsFragment">

    <LinearLayout
        android:id="@+id/layout_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/switchBack"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/switchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="on"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Switch
            android:id="@+id/toggle_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/switch_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_switch"
        android:padding="10dp"
        android:text="@string/switch_message"
        android:textColor="@color/list_divider"
        android:textSize="14dp" />

</RelativeLayout>



